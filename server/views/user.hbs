<h1>{{capitalize customer.firstName}}'s Nile</h1>
<section class='infobox'>
    <div class='heading'>
        <h2>Information</h2>
        <a href='/user/modify'>
            Modify
        </a>
    </div>
    <div><span class='bold'>First Name:</span>
        {{capitalize customer.firstName}}
    </div>
    <div><span class='bold'>Last Name:</span>
        {{capitalize customer.lastName}}
    </div>
    <div><span class='bold'>Email:</span>
        {{customer.emailAddress}}
    </div>
</section>
<a class='menu_link' href='user/{{getKey @user}}/cart'>Shopping Cart</a>
<button type='button' class='red' onclick='location.href="/user/logout"'>
    Log Out
</button>